@model Ayla_Store_MVC.Models.Product

<!-- ======= Portfolio Details Section ======= -->
<section id="portfolio-details" class="portfolio-details">
    <div class="container">

        <div class="row gy-4">

            <div class="col-lg-8">
                <div id="carouselExampleControlsNoTouching" class="carousel slide" data-bs-touch="false" data-bs-interval="false">
                    <div class="carousel-inner" style="width:95%;height:400px;border-radius:20px;box-shadow: 0px 0 30px rgba(44, 73, 100, 0.08);">
                        <div class="carousel-item active">
                            <img src="~/@Model.Photo" class="d-block w-100" alt="...">
                        </div>
                        @foreach (var item in Model.ProductImages)
                        {
                            <div class="carousel-item">
                                <img src="~/@item.Image" class="d-block w-100" alt="...">
                            </div>
                        }

                    </div>
                    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControlsNoTouching" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControlsNoTouching" data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                    </button>
                </div>
            </div>

            <div class="col-lg-4">
                <div class="portfolio-info" style="height:400px;border-radius:20px;">
                    <h3>Item information</h3>
                    <ul>

                        <li><strong>Category</strong>: @Model.Category.Name</li>
                        <li><strong>Quantity</strong>: @Model.Quantity</li>
                        <li><strong>Price</strong>: @Model.Price</li>
                        <li><strong>Product Date</strong>:@Model.EntryDate</li>
                        <li><strong>Client</strong>: @Model.SupplierName</li>
                        <li><strong>Item Url </strong>: <a href="@Model.ReviewUrl" target="_blank">@Model.ReviewUrl</a></li>
                    </ul>
                    <div class="mt-5">
                        <button type="submit"
                                asp-controller="Home"
                                asp-action="AddToCart"
                                asp-route-id="@Model.Id"
                                class="btn btn-outline-primary"
                                style="border-radius:5px;
                                color:rgb(41,15,193);">
                            Add to cart <i class="bi bi-plus"></i>
                        </button>
                    </div>
                </div>

            </div>

        </div>
        <div class="row gy-4">
            <div class="portfolio-description">
                <h2>@Model.Name</h2>
                <p>
                    @Model.Description
                </p>
            </div>
        </div>
    </div>
</section>

<!-- End Portfolio Details Section -->
